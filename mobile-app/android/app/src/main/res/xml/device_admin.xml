<?xml version="1.0" encoding="utf-8"?>
<device-admin xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-policies>
        <!-- Lock the device screen -->
        <force-lock />
        
        <!-- Factory reset the device -->
        <wipe-data />
        
        <!-- Disable keyguard features (lock screen widgets, fingerprint, etc.) -->
        <disable-keyguard-features />
        
        <!-- Reset password / Set PIN -->
        <reset-password />
        
        <!-- Limit password attempts -->
        <limit-password />
        
        <!-- Watch login attempts -->
        <watch-login />
        
        <!-- Disable camera -->
        <disable-camera />
        
        <!-- Expire password -->
        <expire-password />
        
        <!-- Encrypted storage -->
        <encrypted-storage />
    </uses-policies>
</device-admin>
